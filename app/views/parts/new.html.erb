<h1><%= @relatepart.title %>に新規パーツを追加</h1>

<div class="row">
  <div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
    

    <%= form_for(@part) do |f| %>
      
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group" >
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
  
      <div class="form-group" >
        <%= f.label :content, '内容' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
  
      <%= f.submit '作成', class: 'btn btn-danger btn-xs' %>
      
      <%= link_to '戻る', edit_part_path(@relatepart), class: 'btn btn-info btn-xs' %>
    
    <% end %>
  </div>
</div>