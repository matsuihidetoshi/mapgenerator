<h1><%= @relatepart.title %>に新規パーツを追加</h1>

<div class="row">
  <div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
    <% if @part.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@part.errors.count, "error") %> prohibited this part from being saved:</h2>

        <ul>
          <% @part.errors.full_messages.each do |part| %>
            <li><%= part %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(@part) do |f| %>
      <div class="form-group" >
        <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title, class: 'form-control' %>
      </div>
  
      <div class="form-group" >
        <%= f.label :content, '内容' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
  
      <%= f.submit '作成', class: 'btn btn-danger btn-xs' %>
      <%= link_to '戻る', edit_part_path(@relatepart), class: 'btn btn-info btn-xs' %>
    <% end %>
  </div>
</div>