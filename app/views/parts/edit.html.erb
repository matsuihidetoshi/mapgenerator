<h1>Edit <%= @part.title %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@part) do |f| %>
    
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group" >
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group" >
        <%= f.label :content, 'Content' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      <% if @back_to %>
        <%= f.hidden_field :map_id, value: @back_to.id %>
      <% end %>
      <%= f.submit 'Update', class: 'btn btn-success btn-block return' %>
    <% end %>
    <% if (@part.relatings.exists?) %>
      <%= link_to "Print the map from this part", map_former_path(@part, edit: true), class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= link_to "Add a new part to this part", new_part_path(id: @part.id, edit: true), class: 'btn btn-info btn-block' %>
    <% if @back_to %>
      <div data-turbolinks="false"><%= link_to "Back", map_former_path(@back_to), class: 'btn btn-warning btn-block return' %></div>
    <% else %>
      <div data-turbolinks="false"><%= link_to "Back", root_path, class: 'btn btn-warning btn-block return' %></div>
    <% end %>
  </div>
</div>
