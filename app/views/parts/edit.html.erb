<h1><%= @part.title %>パーツの詳細・編集ページ</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@part) do |f| %>
      <div class="form-group" >
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group" >
        <%= f.label :content, '内容' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>

      <%= f.submit '編集', class: 'btn btn-danger btn-xs' %>
      <%= link_to "このパーツに新規パーツ追加", new_part_path, class: 'btn btn-warning btn-xs' %>
      <% if (@part.relatings.exists?) %>
        <%= link_to "このパーツからのマップを表示", print_path, class: 'btn btn-warning btn-xs' %>
      <% end %>
      <%= link_to "戻る", root_path, class: 'btn btn-info btn-xs' %>
    <% end %>
  </div>
</div>
