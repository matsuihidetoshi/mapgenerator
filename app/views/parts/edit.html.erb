<h1>Edit <%= @part.title %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@part) do |f| %>
    
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group" >
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group" >
        <%= f.label :content, 'Content' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>

      <%= f.submit 'Update', class: 'btn btn-danger btn-xs' %>
      <%= link_to "Add a new part to this part", new_part_path, class: 'btn btn-warning btn-xs' %>
      <% if (@part.relatings.exists?) %>
        <%= link_to "Print the map from this part", print_path(@part), class: 'btn btn-warning btn-xs' %>
      <% end %>
      <%= link_to "Return", root_path, class: 'btn btn-info btn-xs' %>
    <% end %>
  </div>
</div>
