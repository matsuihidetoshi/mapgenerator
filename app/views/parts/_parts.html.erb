<ul class="media-list">
  <% parts.each do |part| %>
    <li class="media">
      <div class="media-body">
        
        <div class="panel panel-default">
          <div class="panel-heading">
            <div>
              <%= link_to part.user.name, user_path(part.user) %> <span class="text-muted">作成日:<%= part.created_at %></span>
            </div>
            <div>
              <p>タイトル：<%= part.title %></p>
              <p>内容：<%= part.content %></p>
            </div>
            <div>
              <% if current_user == part.user %>
                <% if current_user.parts.count > 1 %>
                  <%= link_to "削除", part, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
                <% end %>
                <%= link_to "詳細", edit_part_path(part), class: 'btn btn-primary btn-xs' %>
              <% end %>
            </div>
          </div>
        </div>
            
        
        
      </div>
    </li>
  <% end %>
  <%= paginate parts %>
</ul>