<h1>Map from <%= @part.title %></h1>
<div><iframe src="<%= @former.path %>" width="100%" height="500px" ></iframe></div>
<div class="blank"></div>
<div class="form-group map-form-section">
	<%= form_tag(new_part_path, method: :get) do %>
		<%= hidden_field_tag :map_id, @part.id %>
		<%= select_tag(:id, options_for_select(@part.family_to_options), class: "form-control map-select map-form-group") %>
		<%= submit_tag("Add", class: "btn btn-info map-form-group map-submit") %>
	<% end %>
</div>
<div class="form-group map-form-section">
	<%= form_tag(edit_part_path, method: :get) do %>
		<%= hidden_field_tag :map_id, @part.id %>
		<%= select_tag(:edit_id, options_for_select(@part.family_to_options), class: "form-control map-select map-form-group") %>
		<%= submit_tag("Edit", class: "btn btn-success map-form-group map-submit") %>
	<% end %>
</div>
<div class="form-group map-form-section">
	<%= form_tag(part_path, method: :delete) do %>
		<%= hidden_field_tag :map_id, @part.id %>
		<%= select_tag(:delete_id, options_for_select(@part.family_to_options(false)), class: "form-control map-select map-form-group") %>
		<%= submit_tag("Delete", {class: "btn btn-danger map-form-group map-submit", data: {confirm: 'Are you sure?'}}) %>
	<% end %>
</div>
<div class ="return" data-turbolinks="false">
	<% if @edit %>
		<%= link_to 'Back', edit_part_path(@part), class: 'btn btn-warning btn-block' %>
	<% else%>
		<%= link_to 'Back', root_path, class: 'btn btn-warning btn-block' %>
	<% end %>
</div>
